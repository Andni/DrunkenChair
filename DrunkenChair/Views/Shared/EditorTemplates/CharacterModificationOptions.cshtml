@model Niklasson.DrunkenChair.DatabaseTables.CharacterModificationOptions
@using Niklasson.DrunkenChair.DatabaseTables;

<div style="margin-left:24px">
    @{
        if (Model.Alternatives.Count == 1)
        {
            <br />
            @Html.DisplayFor(m => m.Alternatives)
        }
        else
        {
            for(int i = 0; i < Model.Alternatives.Count(); i++)
            {
                <br />
                @Html.RadioButtonFor(m => m.SelectedAlternativeIndex, i) @Model.Alternatives[i].ToString()
            }
                @Html.ValidationMessageFor(m => m.SelectedAlternativeIndex)
        }
        //@Html.HiddenFor(m => m.SelectedAlternativeIndex)
        @Html.EditorFor(m => m.Alternatives)
    }
</div>
