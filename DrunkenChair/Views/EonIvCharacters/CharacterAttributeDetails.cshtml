@model DrunkenChair.Models.CharacterAttributeDetails

@{
    ViewBag.Title = "CharacterAttributeDetails";
    var dices = Model.DicesToDistribute;
    var max = Model.MaxDicesPerAttribute;

    var basicStats = ((DrunkenChair.Models.EonIvCharacter)Session["character"]);
    
    object diceDistributorViewData = new 
    {
        htmlAttributes = new 
        {
            @class = "form-control",
            @onkeydown = "return false",
            @min = "0",
            @max = "5",
            @style = "color: transparent; text-shadow: 0 0 0 gray;"
        }
    };
    
}

<h2>CharacterAttributeDetails</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Character Attributes</h4>
        <hr />
        <p>
            Spendera @dices tärningar på attributen, max @max tärningar på ett attribut.
        </p>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.StrenghtBonusDices, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.StrenghtBonusDices, diceDistributorViewData)
            <br/>
            @Html.LabelFor(model => model.StaminaBonusDices, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.StaminaBonusDices, diceDistributorViewData)
        </div>

        <div id="divCharacterPreview">
            @{Html.RenderPartial("CharacterPreview", Model.Preview);}
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
