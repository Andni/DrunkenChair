@model Niklasson.DrunkenChair.Models.CharacterBasicStepViewModel

@{
    ViewBag.Title = "Karaktärsgrunder";
}

@section AddToHead
{
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
}

<h2>Karaktärsgrunder</h2>


@using (Html.BeginForm("Create", "EonIvCharacterCreator", FormMethod.Post, new { style = "display:inline-block; width: 50%; float: left" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Karaktärsgrunder</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.EditorForModel()
        </div>

    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="nextButton" value="Next" class="btn btn-default" />
        </div>
    </div>
}

    <div id="CharacterPreview" style="display:inline-block; float: right">
        @{Html.RenderPartial("CharacterPreview", Model.CharacterPreview);}
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

        <script type="text/javascript" src="@Url.Content("~/js/EonIvCharacters/create.js")"></script>
    }
