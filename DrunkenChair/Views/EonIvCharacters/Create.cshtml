@model DrunkenChair.Models.BasicCharacterDetails


@{
    ViewBag.Title = "Karaktärsgrunder";

    var dropdownListAttributes = new { htmlAttributes = new { @class = "form-control" } };
    var labelAttributes = new { @class = "control-label col-md-2" };

    var races = new SelectList(Model.Races.Select(r => r.Name));
}

<h2>Karaktärsgrunder</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Karaktärsgrunder</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            @Html.LabelFor(model => model.Background, htmlAttributes: labelAttributes)
            <div>
                @Html.RadioButtonFor(model => model.Background, dropdownListAttributes)
            </div>

            @Html.LabelFor(model => model.Archetype, htmlAttributes: labelAttributes)
            <div>
                @Html.DropDownListFor(model => model.Archetype, Model.Archetypes, dropdownListAttributes)
            </div>
            
            <br />

            @Html.LabelFor(model => model.Race, htmlAttributes: labelAttributes)
            <div>
                @Html.DropDownListFor(model => model.Race, races, dropdownListAttributes)
            </div>

            <br />

            @Html.LabelFor(model => model.Environment, htmlAttributes: labelAttributes)
            <div>
                @Html.DropDownListFor(model => model.Environment, Model.Environments, dropdownListAttributes)
            </div>

        </div>

        <div id="divCharacterPreview">
            @{Html.RenderPartial("CharacterPreview", Model.Preview);}
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(this.document).ready(function () {
            $('#Race').change(function () {
                var selection = $('#Race').val();
                $('#divCharacterPreview').load(
                    '@(Url.Action("GetCharacterPreview", "EonIvCharacters", null, Request.Url.Scheme))?archetype=Krigare&environment=Hav&race=' + selection);
            });
        });
        
    </script>
}
